<div class="main">
  <div class="container">
    <h2 class="form-heading">編集する</h2>
    <%= form_tag("/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <input type="text" name="title" value="<%= @post.title %>">
          <textarea name="content"><%= @post.content %></textarea>
          <input type="submit" value="編集">
        </div>
      </div>
     <% end %> 
  </div>
</div>