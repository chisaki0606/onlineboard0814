<div class="main">
  <div class="container">
      <h2 class="form-heading"><%= @user.name %>のプロフィール</h2>
        <div class="user-show-item">
          <p><b><%= @user.name %></b></p>
          <% if @user.id == @current_user.id %>
            <p><%= @user.email %></p>
          <% end %>
          <% if @user.id == @current_user.id %>
            <%= link_to("編集", "/users/#{@user.id}/edit") %>
          <% end %>
        </div>

      <h2 class="form-heading"><%= @user.name %>の投稿一覧</h2>
        <% @user.posts.each do |post| %>
          <div class="posts-index-item">
            <div class="post-title">
              <%= link_to(post.title, "/posts/#{post.id}") %>
            </div>
            <div class="post-content">
              <%= post.content %>
            </div>
            <div class="post-user">
              by <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            </div>
          </div>
        <% end %>

  </div>
</div>